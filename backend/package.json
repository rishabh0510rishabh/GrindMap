{
  "name": "backend",
  "version": "1.0.0",
  "description": "GrindMap Backend - Competitive Programming Progress Tracker",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write src/**/*.js",
    "format:check": "prettier --check src/**/*.js",
    "prepare": "husky install",
    "audit": "npm audit",
    "audit:fix": "npm audit fix",
    "audit:logs": "node scripts/auditViewer.js",
    "health": "curl -f http://localhost:5001/health || exit 1",
    "monitor": "npm run health && echo 'Server is healthy'",
    "clean": "rm -rf node_modules package-lock.json dist && npm install",
    "dev:debug": "nodemon --inspect src/server.js"
  },
  "keywords": [
    "competitive-programming",
    "leetcode",
    "codeforces",
    "progress-tracker",
    "api",
    "express",
    "nodejs"
  ],
  "author": "GrindMap Team",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "axios": "1.6.2",
    "cors": "2.8.5",
    "dotenv": "16.3.1",
    "express": "4.18.2",
    "express-rate-limit": "7.1.5",
    "express-validator": "7.0.1",
    "morgan": "1.10.0",
    "xss": "1.0.14"
  },
  "devDependencies": {
    "nodemon": "3.0.2",
    "jest": "29.7.0",
    "supertest": "6.3.3",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-node": "11.1.0",
    "prettier": "3.1.1",
    "@babel/preset-env": "7.23.6",
    "babel-jest": "29.7.0",
    "husky": "8.0.3",
    "lint-staged": "15.2.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Yugenjr/GrindMap.git"
  },
  "bugs": {
    "url": "https://github.com/Yugenjr/GrindMap/issues"
  },
  "homepage": "https://github.com/Yugenjr/GrindMap#readme"
}
